@*@model LoreDrop.Models.Series*@
@{
    ViewData["Title"] = "Create Series";
}

@section Styles {
    <link rel="stylesheet" href="~/css/series-form.css" asp-append-version="true" />
}

<div class="series-form-page">
    <div class="series-form-card">
        <h2>Create New Series</h2>
        <form asp-action="Create" method="post">
      
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title" class="text-error"></span>
            </div>
      
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-error"></span>
            </div>
      
            <div class="form-row">
                <div class="form-group small">
                    <label asp-for="DateAdded"></label>
                    <input asp-for="DateAdded" type="date" />
                    <span asp-validation-for="DateAdded" class="text-error"></span>
                </div>
                <div class="form-group small">
                    <label asp-for="Author"></label>
                    <input asp-for="Author" />
                    <span asp-validation-for="Author" class="text-error"></span>
                </div>
            </div>
      
            <div class="form-actions">
                <a asp-action="Index" class="btn-cancel">Cancel</a>
                <button type="submit" class="btn-submit">Create</button>
            </div>
        </form>
    </div>
</div>